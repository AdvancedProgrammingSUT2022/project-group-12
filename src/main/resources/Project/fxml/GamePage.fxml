<Pane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Project.Client.Views.GameView">
    <MenuBar fx:id="menuBar" prefHeight="27.0" prefWidth="600.0">
        <Menu />
        <Menu />
        <Menu />

        <Menu />
        <Menu />
        <Menu />
        <Menu />
        <Menu />
        <Menu />
        <Menu />
        <Menu />
        <Menu />
        <Menu />
        <Menu mnemonicParsing="false" text="Panels">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#gotoTradePanel" text="goto Trade Panel" />
                <MenuItem onAction="#researchInfo" text="Research Panel" />
                <MenuItem onAction="#gotoCheatSelectPage" text="goto cheat sheet" />
                <MenuItem onAction="#gotoCivPanel" text="Civilization Info" />
                <MenuItem mnemonicParsing="false" onAction="#gotoNotificationPanel" text="goto Notification Panel" />
            </items>
        </Menu>
        <Menu onAction="#backToMenu" text="Back">
            <MenuItem onAction="#backToMenu" text="Back" />
