<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<Pane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Project.Views.GameView">
    <MenuBar fx:id="menuBar" prefHeight="27.0" prefWidth="352.0">
        <Menu fx:id="cheat" text="Cheat Sheet">
            <MenuItem text="goto cheat sheet" onAction="#gotoCheatSelectPage"/>
        </Menu>
        <Menu fx:id="info" text="Info Panel">
            <MenuItem text="Civilization Info" onAction="#gotoCivPanel"/>
        </Menu>
        <Menu onAction="#backToMenu" text="Back"/>
        <Menu onAction="#exit" text="Exit"/>
        <Menu text="Research">
            <MenuItem text="Research Panel" onAction="#researchInfo"/>
        </Menu>

    </MenuBar>
    <ScrollPane fx:id="scrollPane" layoutX="-1.0" layoutY="25.0" prefHeight="374.0" prefWidth="600.0"
                style="-fx-background-color: transparent;">
        <Pane fx:id="hexPane"/>
    </ScrollPane>
    <Pane fx:id="selectionPane" visible="false"/>
    <Button fx:id="btn" layoutY="50" onMouseClicked="#showGameMap" prefHeight="24.0" prefWidth="242.0"/>
</Pane>
